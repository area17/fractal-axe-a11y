{
  "name": "@area17/fractal-axe-a11y",
  "version": "1.0.0",
  "description": "A Fractal addon to test your components for accessibility issues using Axe",
  "main": "index.js",
  "scripts": {
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "fractal:start": "fractal start --sync",
    "fractal:build": "fractal build"
  },
  "author": "AREA 17",
  "license": "ISC",
  "devDependencies": {
    "axe-core": "^4.1.3",
    "autoprefixer": "^10.2.4",
    "laravel-mix": "^6.0.11",
    "postcss": "^8.2.6"
  },
  "files": [
    "dist",
    "preview-a11y.js"
  ]
}
